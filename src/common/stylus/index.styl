@import "./reset.styl";
@import "./icon.styl"
@import "./variable.styl"

body
  background: #f7f7f7
  color:#38393C
  font-size:14px
  text-align:center
  box-sizing: border-box

input
  outline: none

.gradient-botton-blue
  margin:20px 15px
  background:linear-gradient(to left,#407CE6,#00ACFC)
  border-radius:3px
  height:45px
  line-height:45px
  text-align:center
  color:#fff
  font-size:14px
  box-shadow: 0 2px 6px #71ABFD

.gradient-botton-pink
  margin:20px 15px
  background:linear-gradient(to left,#EB3F52,#FF7584)
  border-radius:3px
  height:45px
  line-height:45px
  text-align:center
  color:#fff
  font-size:14px
  box-shadow: 0 2px 6px #FF7584

.singleColor-button-blue
  background: #6DA6FE
  margin: 20px 15px 0
  color: #fff
  height: 45px
  line-height: 45px
  border-radius: 3px
.layout-tow-columns
  display: flex;
  align-items: center
  min-height: 45px
  line-height: 45px
  background: #fff
  padding: 0 15px
  border-bottom: 1px solid #e2e2e2
  .column-left
    text-align: left
    flex:1
  .column-right
    text-align: right
    flex:1

.mt10
  margin-top:10px

.dialog
  .dialog-title
    height: 100px
    line-height: 100px
    color: #4F5054
    font-size: 14px
  .dialog-button-group
    .gradient-botton-blue
      margin:0 28px 15px
    .cancel
      margin-bottom: 20px
      font-size: 14px
      color: #9b9b9b

.weui-search-bar__label span
  line-height: 26px
.weui-search-bar.weui-search-bar_focusing .weui-search-bar__cancel-btn
 color:#6DA6FE
